<project xmlns="http://maven.iaa-tif-certificacion.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.iaa-tif-certificacion.org/POM/4.0.0 http://maven.iaa-tif-certificacion.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.seguritech.camaras</groupId>
        <artifactId>camaras-back</artifactId>
        <version>1.0.0</version>
    </parent>
    <artifactId>camaras-EAR</artifactId>
    <packaging>ear</packaging>
    <name>camaras-EAR</name>
    <build>
        <finalName>CanarasEar-Backend</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-ear-plugin</artifactId>
                <version>2.10.1</version>
                <configuration>
                    <earSourceDirectory>EarContent</earSourceDirectory>
                    <generateApplicationXml>true</generateApplicationXml>
                    <defaultLibBundleDir>APP-INF/lib</defaultLibBundleDir>
                    <modules>
                        <ejbModule>
                            <groupId>com.seguritech.camaras</groupId>
                            <artifactId>camaras-backDS</artifactId>
                        </ejbModule>
                        <ejbModule>
                            <groupId>com.seguritech.camaras</groupId>
                            <artifactId>camaras-backBS</artifactId>
                        </ejbModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
                <dependency>
                <groupId>com.seguritech.camaras</groupId>
                <artifactId>camaras-backBS</artifactId>
                <type>ejb</type>
                <version>${project.version}</version>
        </dependency>        
        <dependency>
                <groupId>com.seguritech.camaras</groupId>
                <artifactId>camaras-backDS</artifactId>
                <type>ejb</type>
                <version>${project.version}</version>
        </dependency>
        <dependency>
                <groupId>com.seguritech.camaras</groupId>
                <artifactId>camaras-backAPI</artifactId>
                <version>${project.version}</version>
        </dependency>
    </dependencies>
</project>
